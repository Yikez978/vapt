<div class="pTop5 pBot5">
	<%= link_to 'Add new', 'javascript:void(0);', id: 'new-host-cred-link', class: 'pull-right btn btn-primary btn-xs' %>
	<span class="clearfix"></span>
</div>
<table class="table table-striped" id="credsTabview" data-eng-main-id="<%= eng_main_id %>" >
	<thead>
		<tr>
			<th>IP</th>
			<th>PWDump</th>
			<th>Password</th>
			<th>Description</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		<% unless host_creds.blank? %>
			<% host_creds.each do |host_cred| %>
				<tr>
					<td class="pRelative">
						<span class="pointer eHover">
							<%= best_in_place host_cred, :ip, url: engagement_engagement_main_host_cred_path(@engagement_main.engagement, @engagement_main, host_cred) %>
						</span>
						<i class="glyphicon glyphicon-pencil editIcon"></i>
					</td>
					<td class="pRelative">
						<span class="pointer eHover">
							<%= best_in_place host_cred, :pwdump, url: engagement_engagement_main_host_cred_path(@engagement_main.engagement, @engagement_main, host_cred), as: :textarea %>
						</span>
						<i class="glyphicon glyphicon-pencil editIcon"></i>
					</td>
					<td class="pRelative">
						<span class="pointer eHover">
							<%= best_in_place host_cred, :password, url: engagement_engagement_main_host_cred_path(@engagement_main.engagement, @engagement_main, host_cred) %>
						</span>
						<i class="glyphicon glyphicon-pencil editIcon"></i>
					</td>
					<td class="pRelative">
						<span class="pointer eHover">
							<%= best_in_place host_cred, :description, url: engagement_engagement_main_host_cred_path(@engagement_main.engagement, @engagement_main, host_cred), as: :textarea %>
						</span>
						<i class="glyphicon glyphicon-pencil editIcon"></i>
					</td>
					<td>
						<%= link_to "Delete", "javascript:void(0);", class: "delete-cred-link", "data-obj-id" => host_cred.id %>
					</td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>