      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        Management <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li>
          <%= link_to "Survey Management", anonymous_questions_path %>
        </li>
        <li>
          <%= link_to "Custom Exploit Management", custom_exploits_path %>
        </li>
        <li>
         <%= link_to "Sidekiq Dashboard", "/sidekiq" %>
        </li>
      </ul>
    </li>
		<li><%= link_to "", admin_path, class: 'glyphicon glyphicon-cog' %></li>
	<% end %>
<% else %>
  <li><%= link_to "Log in", login_path %></li>
<% end %>
