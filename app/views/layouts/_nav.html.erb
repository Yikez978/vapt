<li><%= link_to "Home",   root_path %></li>
<% if logged_in? %>
  <li><%= link_to "Reports", reports_path %></li>
  <li><%= link_to "Engagements", engagements_path %></li>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      Databases <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to "Exploits DB", exploits_path %></li>
      <li><%= link_to "CVE DB", cves_path %></li>
      <li><%= link_to "CWE DB", cwes_path %></li>
    </ul>
  </li>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      Account <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to "Profile", current_user %></li>
      <li><%= link_to "Settings", edit_user_path(current_user) %></li>
      <li class="divider"></li>
      <li>
        <%= link_to "Log out", logout_path, method: "delete" %>
